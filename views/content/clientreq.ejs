<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                <h1>Client</h1>
                </div>
                <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="../dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item active">Client</li>
                    <li class="breadcrumb-item active">For Approval</li>
                </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    
    <% data.forEach(function(data){ %>  
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title"><h3>Request for Approval</h3></div>
                        </div>
                        <div class="card-body">
                            <form method="POST">
                                <div class="form-row">
                                    <div class="form-group col-md-12">
                                        <label for="clientName">Client/Institution Name</label>
                                        <input type="text" class="form-control" id="clientName" placeholder="<%=data.client_name%>" readonly>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-12">
                                        <label for="clientAddress">Client Address</label>
                                        <input type="search" class="form-control" id="clientAddress" placeholder="<%=data.client_address%>" aria-label="Client Address" readonly>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label for="contactPerson">Contact Person</label>
                                        <input type="text" class="form-control" id="contactPerson" placeholder="<%=data.client_contact_person%>" aria-label="Contact Person" readonly>     
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="contactNumber">Contact Number</label>
                                        <input type="text" class="form-control" id="contactNumber" placeholder="<%=data.client_contact_no%>" readonly>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label for="clientEmail">Email</label>
                                        <input type="text" class="form-control" id="clientEmail" placeholder="<%=data.client_email%>" aria-label="Contact Person" readonly>     
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="clientPassword">Default Password</label>
                                        <input type="text" class="form-control" id="clientPassword" name="clientPassword" placeholder="Default Password" required>
                                    </div>
                                </div>
                                <div class="form-row justify-content-end">
                                    <button type="button" id="approveClient" class="btn btn-primary" value="<%=data.id%>" name="clientID">Approve Client</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <%});%>
</div>