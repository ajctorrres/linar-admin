<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                <h1>Deliveries</h1>
                </div>
                <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="../dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item active">Deliveries</li>
                    <li class="breadcrumb-item active">Add Delivery</li>
                </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
      
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title"><h3>Add delivery</h3></div>
                        </div>
                        <div class="card-body">
                            <form method="POST">
                                <div class="form-row">
                                    <div class="form-group col-md-12">
                                        <label for="orderId">Order ID</label>
                                        <select id="orderId" name="orderId" class="form-control">
                                            <option selected value="none">Choose...</option>
                                            <%for(i=0; i<order.length; i++){ %>
                                            <option name="order" value="<%=order[i].id%>"><%=order[i].id%> - <%=order[i].client_name %></option>
                                            <%}%>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label for="dateDelivered">Date Delivered</label>
                                        <input type="date" class="form-control" id="dateDelivered" name="dateDelivered" >
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="receipient">Recipient</label>
                                        <input type="text" class="form-control" id="recipient" name="recipient" placeholder="Recipient">
                                    </div>
                                </div>    
                                <div class="form-row justify-content-end">
                                    <button type="button" id="adddelivery" class="btn btn-primary">Confirm</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>